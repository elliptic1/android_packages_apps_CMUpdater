<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/notification_pref_key"
        android:title="@string/notification_pref_title"
        android:summaryOn="Notifications on"
        android:summaryOff="Notifications off"
        />

    <RingtonePreference
        android:defaultValue="@string/empty"
        android:key="@string/ringtone_pref_key"
        android:ringtoneType="all"
        android:shouldDisableView="true"
        android:showDefault="true"
        android:showSilent="true"
        android:title="@string/ringtone_pref_title"
        android:dependency="@string/notification_pref_key" >
    </RingtonePreference>

</PreferenceScreen>